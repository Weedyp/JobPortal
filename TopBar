  },
  hasNotifications: {
    type: Boolean,
    default: true
  },
  placeholder: {
    type: String,
    default: 'Search'
  }
});

// Emits for interaction
defineEmits(['search', 'notifications-click']);

const localSearch = ref('');
</script>

